<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/simpletooltip_arrow_width"
              android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/update_muziko_prompt"
        android:textColor="#505659"
        android:textSize="18sp"
        android:textStyle="normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@color/new_gray_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp">

        <TextView
            android:id="@+id/versionText"
            android:layout_width="@dimen/simpletooltip_margin"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/latest_version"
            android:textColor="#505659"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateText"
            android:layout_width="@dimen/simpletooltip_margin"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/stringValue25"
            android:textColor="#505659"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <TextView
        android:id="@+id/notesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/simpletooltip_overlay_circle_offset"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/new_features"
        android:textColor="#858585"
        android:textSize="18sp"/>


</LinearLayout>
