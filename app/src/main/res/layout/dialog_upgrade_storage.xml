<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/subscription_brown">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_timelapse_white_48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/simpletooltip_overlay_circle_offset"
                    android:gravity="center"
                    android:text="Song Limit Reached"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/upgradeMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/simpletooltip_overlay_circle_offset"
            android:gravity="center"
            android:text="Your cloud storage is almost full. To upload and sync more songs, please upgrade to a plan as per your needs"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:background="@color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/cancelText"
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/simpletooltip_arrow_height"
                android:layout_marginTop="@dimen/simpletooltip_arrow_height"
                android:layout_weight="49"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="#F5820C"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                />

            <TextView
                android:id="@+id/upgradeText"
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/simpletooltip_arrow_height"
                android:layout_marginTop="@dimen/simpletooltip_arrow_height"
                android:layout_weight="49"
                android:gravity="center"
                android:text="UPGRADE"
                android:textColor="#F5820C"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
