<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_250dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:background="#00aef3">

            <ImageView
                android:layout_width="@dimen/dimen_150dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/rate_image"/>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/simpletooltip_overlay_circle_offset"
            android:gravity="center"
            android:text="@string/rate_us"
            android:textColor="#00aef3"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:background="#efefee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/later"
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/simpletooltip_arrow_height"
                android:layout_marginTop="@dimen/simpletooltip_arrow_height"
                android:layout_weight="49"
                android:gravity="center"
                android:text="@string/later"
                android:textColor="#848484"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#efefee"
                />

            <TextView
                android:id="@+id/rateNow"
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/simpletooltip_arrow_height"
                android:layout_marginTop="@dimen/simpletooltip_arrow_height"
                android:layout_weight="49"
                android:gravity="center"
                android:text="@string/yes"
                android:textColor="#00aef3"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
