<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_250dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <io.techery.properratingbar.ProperRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_20dp"
            app:prb_clickable="true"
            app:prb_defaultRating="0"
            app:prb_tickNormalDrawable="@drawable/ic_star_normal"
            app:prb_tickSelectedDrawable="@drawable/ic_star_selected"
            app:prb_tickSpacing="5dp"
            app:prb_totalTicks="5"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:background="#efefee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/simpletooltip_arrow_height"
                android:layout_marginTop="@dimen/simpletooltip_arrow_height"
                android:layout_weight="49"
                android:gravity="center"
                android:text="@string/stringValue22"
                android:textColor="#848484"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#efefee"
                />

            <TextView
                android:id="@+id/ok"
                android:layout_width="@dimen/simpletooltip_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/simpletooltip_arrow_height"
                android:layout_marginTop="@dimen/simpletooltip_arrow_height"
                android:layout_weight="49"
                android:gravity="center"
                android:text="@string/alert_ok_button"
                android:textColor="#00aef3"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
