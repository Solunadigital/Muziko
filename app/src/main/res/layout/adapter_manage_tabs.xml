<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layoutMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wave_height"
                android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp">

        <ImageView
            android:id="@+id/imageGrabber"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_gravity="center_vertical|left"
            android:padding="@dimen/dimen_5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/drag_handle2"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/upLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wave_height"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/iconLayout"
        android:padding="@dimen/dimen_14dp">

        <com.muziko.controls.MuzikoSwitch
            android:id="@+id/tabswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:checked="false"
            app:showText="false"/>


        <TextView
            android:id="@+id/tabName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/simpletooltip_overlay_circle_offset"
            android:layout_toRightOf="@id/tabswitch"
            android:text="@string/play_list_name"
            android:textColor="#8d8d8d"
            android:textSize="16sp"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/simpletooltip_overlay_circle_offset"
        android:background="#e6e6e6"/>

</RelativeLayout>
