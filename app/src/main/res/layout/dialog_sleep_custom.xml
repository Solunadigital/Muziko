<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:orientation="horizontal">

        <com.muziko.controls.WheelPicker.WheelPicker
            android:id="@+id/wheelHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="true"
            aigestudio:wheel_item_align="right"
            aigestudio:wheel_item_text_color="#B8B8B8"
            aigestudio:wheel_item_text_size="52sp"
            aigestudio:wheel_selected_item_text_color="@color/black"/>

        <com.muziko.controls.WheelPicker.WheelPicker
            android:id="@+id/wheelMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="true"
            aigestudio:wheel_item_align="right"
            aigestudio:wheel_item_text_color="#B8B8B8"
            aigestudio:wheel_item_text_size="52sp"
            aigestudio:wheel_selected_item_text_color="@color/black"/>

        <com.muziko.controls.WheelPicker.WheelPicker
            android:id="@+id/wheelMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="true"
            aigestudio:wheel_item_align="right"
            aigestudio:wheel_item_text_color="#B8B8B8"
            aigestudio:wheel_item_text_size="52sp"
            aigestudio:wheel_selected_item_text_color="@color/black"/>

    </LinearLayout>

</LinearLayout>
