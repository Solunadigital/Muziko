<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dimen_300dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/simpletooltip_overlay_circle_offset"
              android:layout_marginRight="@dimen/simpletooltip_overlay_circle_offset"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simpletooltip_arrow_height"
        android:text="@string/ringtone_type"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/ringtone_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simpletooltip_overlay_circle_offset"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simpletooltip_arrow_height"
        android:labelFor="@+id/filename"
        android:text="@string/ringtone_name"
        android:textColor="@color/normal_blue"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/filename"
        android:layout_width="@dimen/dimen_280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simpletooltip_overlay_circle_offset"
        android:hint="Type Ringtone Name"
        android:inputType="text"
        android:textColorHint="#999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simpletooltip_overlay_circle_offset"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/simpletooltip_overlay_circle_offset"
            android:text="@string/stringValue22"/>


        <Button
            android:id="@+id/save"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/simpletooltip_overlay_circle_offset"
            android:text="@string/save"/>

    </LinearLayout>

</LinearLayout>
